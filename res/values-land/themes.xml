<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Ataxer" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarItemBackground">@drawable/selectable_background_ataxer</item>
        <item name="popupMenuStyle">@style/PopupMenu.Ataxer</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Ataxer</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Ataxer</item>
        <item name="actionBarTabTextStyle">@style/ActionBarTabTextStyle.Ataxer</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Ataxer</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Ataxer</item>
        <item name="actionModeBackground">@drawable/cab_background_top_ataxer</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_ataxer</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Ataxer</item>
        <item name="actionOverflowButtonStyle">@style/Theme.Ataxer.ActionButton.Overflow</item>
        <!-- Light.DarkActionBar specific -->
        <item name="actionBarWidgetTheme">@style/Theme.Ataxer.Widget</item>
        <item name="sdlDialogStyle">@style/Theme.Ataxer.DialogStyleLight</item>
        <item name="android:editTextStyle">@style/EditTextAppTheme</item>
        <item name="android:windowBackground">@color/abp__background_holo_light</item>
        <!--
             <item name="android:spinnerStyle">@style/SpinnerAppTheme</item>
        <item name="android:dropDownSpinnerStyle">@style/SpinnerAppTheme.DropDown</item>
        -->
    </style>

    <style name="ActionBarTabStyle.Ataxer" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/tab_indicator_ab_ataxer</item>
    </style>
    
    <style name="ActionBarTabTextStyle.Ataxer" parent="Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>