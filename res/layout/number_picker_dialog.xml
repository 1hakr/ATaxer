<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <dev.dworks.betterpickers.numberpicker.NumberPicker
        android:id="@+id/number_picker"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:id="@+id/divider_1"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/default_divider_color_dark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom" >

        <Button
            android:id="@+id/cancel_button"
            style="@style/dialog_button"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bp_key_background_dark"
            android:text="@string/picker_cancel" />

        <View
            android:id="@+id/divider_2"
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dip"
            android:layout_marginTop="8dip"
            android:background="@color/default_divider_color_dark" />

        <Button
            android:id="@+id/set_button"
            style="@style/dialog_button"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bp_key_background_dark"
            android:text="@string/picker_set" />
    </LinearLayout>

</LinearLayout>